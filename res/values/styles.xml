<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/AltimeterActionBar</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
    </style>
    
    <style name="ActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" />
    <style name="Button" parent="android:style/Widget.Button" />

    <style name="AltimeterActionBar" parent="ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>
    
    <!-- Buttons -->
    <style name="AltimeterButton" parent="Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AltimeterButton.Blue">
        <item name="android:background">@drawable/btn_blue_selector</item>
    </style>
    
</resources>